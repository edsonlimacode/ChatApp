<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clConversation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/imgConversation"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/avatar02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textNameConversation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Nome"
        android:textColor="@color/gray_600"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgConversation"
        app:layout_constraintStart_toEndOf="@+id/imgConversation"
        app:layout_constraintTop_toTopOf="@+id/imgConversation"
        app:layout_constraintVertical_bias="0.195" />

    <TextView
        android:id="@+id/textLastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="OlÃ¡, pizza ?"
        android:textColor="@color/gray_700"
        app:layout_constraintStart_toStartOf="@+id/textNameConversation"
        app:layout_constraintTop_toBottomOf="@+id/textNameConversation" />
</androidx.constraintlayout.widget.ConstraintLayout>